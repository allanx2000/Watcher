        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Data Store Selector" SizeToContent="Height" Width="300">
    <Window.Resources>

    </Window.Resources>
    <StackPanel Margin="5">
        <!--
<GroupBox Header="Load Extensions">
