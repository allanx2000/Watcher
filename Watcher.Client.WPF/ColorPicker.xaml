<Window x:Class="Watcher.Client.WPF.ColorPicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cp="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="ColorPicker" SizeToContent="WidthAndHeight" >
    <StackPanel>
        <cp:ColorCanvas Name="ColorCanvas" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Name="OKButton" Click="OKButton_Click">Select</Button>
            <Button Name="CancelButton" Click="CancelButton_Click">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
